<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".uibase.HqNewsMainActivity">
    <fragment
        android:id="@+id/hq_news_title_frag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.example.hqandroidstu.uibase.HqNewsTitleFragment"
        android:layout_weight="1"
        />
    <FrameLayout
        android:id="@+id/hq_news_content_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        >
        <fragment
            android:id="@+id/hq_news_content_frag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.example.hqandroidstu.uibase.HqNewsContentFragment"
            />

    </FrameLayout>

</LinearLayout>